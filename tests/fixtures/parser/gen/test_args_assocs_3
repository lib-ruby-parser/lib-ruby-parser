--INPUT
self.[]= foo, :a => 1
--LOCATIONS
     ~~~ selector ()
~~~~~~~~~~~~~~~~~~~~~ expression ()
~~~~ expression (recv)
         ~~~ expression (arg[0])
              ~~~~~~~ expression (arg[1])
                 ~~ operator (arg[1]/pair[0])
              ~~~~~~~ expression (arg[1]/pair[0])
              ~ begin (arg[1]/pair[0]/key)
              ~~ expression (arg[1]/pair[0]/key)
                    ~ expression (arg[1]/pair[0]/value)
--AST
s(:send,
  s(:self), "[]=",
  s(:lvar, "foo"),
  s(:kwargs,
    s(:pair,
      s(:sym, "a"),
      s(:int, "1"))))
